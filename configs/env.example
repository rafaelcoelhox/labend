# LabEnd - Variáveis de Ambiente

# Configuração do Servidor
PORT=8080
HOST=0.0.0.0
GO_ENV=development

# Configuração do Banco de Dados
DATABASE_URL=postgres://labend_user:labend_password@localhost:5432/labend_db?sslmode=disable

# Configuração de Autenticação
JWT_SECRET=your-jwt-secret-key-here-change-in-production

# Configuração de Logging
LOG_LEVEL=info

# Configuração de Performance
DB_MAX_OPEN_CONNECTIONS=100
DB_MAX_IDLE_CONNECTIONS=10
DB_MAX_CONNECTION_LIFETIME=3600

# Configuração de Timeouts (em segundos)
HTTP_READ_TIMEOUT=30
HTTP_WRITE_TIMEOUT=30
HTTP_IDLE_TIMEOUT=60
DB_QUERY_TIMEOUT=30

# Configuração de Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Configuração do Event Bus
EVENTBUS_BUFFER_SIZE=1000
EVENTBUS_WORKERS=10

# Configuração de Monitoramento
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true

# Configuração de Segurança
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Configuração de Deploy (apenas para produção)
# FLY_API_TOKEN=your-fly-api-token-here 